@model CaminhaoModel

@{
    ViewData["Title"] = "Editar";
}

<div class="text-center">

    <h1 class="display-4">Editar Caminhão</h1>

</div>

<form asp-controller="Caminhao" asp-action="Alterar" method="post">
   <input type="hidden" asp-for="Id" /> 

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control">
    </div>

    <div class="form-group">
        <label for="DataDeCriacao">Data de Criação</label>
        <input type="datetime" asp-for="DataDeCriacao" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Caminhao" asp-action="Index">Voltar</a>
</form>
